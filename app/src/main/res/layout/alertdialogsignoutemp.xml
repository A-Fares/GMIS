<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <TextView
        android:id="@+id/text_view_alertdialogemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="16dp"
        android:text=" هل تريد تسجيل الخروج ؟"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:layout_below="@id/text_view_alertdialogemp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/text_view_yesfor_signout_emp"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="نعم"
            android:textColor="#1A237E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_no_for_signout_emp"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:text="لا"
            android:textColor="#1A237E"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>