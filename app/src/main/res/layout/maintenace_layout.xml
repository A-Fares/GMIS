<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:ignore="NamespaceTypo"
        card_view:cardCornerRadius="15dp"
        card_view:contentPadding="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <TextView
                android:id="@+id/maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/monadi"
                android:gravity="center"
                android:text="@string/message_maintenance"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/maintenance_thank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/maintenance"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/monadi"
                android:gravity="center"
                android:text="@string/message_maintenance_thank"
                android:textColor="#000"
                android:textSize="12sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>