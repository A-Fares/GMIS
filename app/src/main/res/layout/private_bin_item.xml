<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/private_bin_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#F4F6F6"
    card_view:cardCornerRadius="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp">
        
        <ProgressBar
            android:id="@+id/progress_bin_private"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:indeterminateDrawable="@drawable/progress_private_employee_bin"
            android:max="100"
            android:progress="70"
            android:progressDrawable="@drawable/progress_private_employee_bin"
            android:secondaryProgress="100" />

        <TextView
            android:id="@+id/client_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_bin_private"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monadi"
            android:text="10ش النصر-فيكتوريا"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_address"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monadi"
            android:text="01061462749"
            android:textColor="#818181"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/bin_number_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_phone"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monadi"
            android:text="15"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/bin_status_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bin_number_data"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monadi"
            android:text="لا تعمل"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/button_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bin_status_data"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/amin"
            android:text="تفريغ"
            android:textColor="#E60039"
            android:textSize="11sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
