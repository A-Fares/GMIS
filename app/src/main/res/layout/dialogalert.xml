<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_alertdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aniq"
        android:padding="16dp"
        android:text=" هل تريد الخروج ؟"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:layout_below="@id/text_view_alertdialog"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"

        >

        <Button
            android:id="@+id/btn_yes"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_dialog"
            android:fontFamily="@font/aniq"
            android:text="نعم"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_no"
            android:background="@drawable/button_dialog_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aniq"
            android:text="لا"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>